<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kids_gradient_bg"
    android:clipToPadding="false">

    <!-- Header TV/Celular -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:background="@drawable/kids_header_gradient"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游놌 KIDS TV HUB"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

    <!-- Tabs Naveg치veis TV -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:focusable="true"
        android:background="@color/kids_blue"
        app:tabMode="fixed"
        app:tabTextColor="@color/kids_tab_inactive"
        app:tabSelectedTextColor="@android:color/white"
        app:tabIndicatorColor="@android:color/white"
        app:tabIndicatorHeight="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintHorizontal_weight="1"/>

    <!-- Conte칰do Principal (ViewPager2 naveg치vel) -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/gamesSection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"/>

    <!-- Se칞칚o Jogos (Foc치vel TV + Touch Celular) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/gamesSection"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/kids_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游꿡 JOGUINHOS"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"/>

            <!-- Grid 2x2 Jogos - TV Focus + Celular Touch -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_marginTop="8dp">

                <ImageButton
                    android:id="@+id/btnMemoryGame"
                    style="@style/KidsGameButton"
                    android:src="@drawable/ic_memory"
                    android:focusable="true"
                    android:contentDescription="Jogo da Mem칩ria"/>

                <ImageButton
                    android:id="@+id/btnColoring"
                    style="@style/KidsGameButton"
                    android:src="@drawable/ic_coloring"
                    android:focusable="true"
                    android:contentDescription="Pintar"/>

                <ImageButton
                    android:id="@+id/btnPuzzle"
                    style="@style/KidsGameButton"
                    android:src="@drawable/ic_puzzle"
                    android:focusable="true"
                    android:contentDescription="Quebra-cabe칞a"/>

                <ImageButton
                    android:id="@+id/btnNumbers"
                    style="@style/KidsGameButton"
                    android:src="@drawable/ic_numbers"
                    android:focusable="true"
                    android:contentDescription="N칰meros"/>

            </GridLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bot칚o Sair (sempre vis칤vel TV/Celular) -->
    <Button
        android:id="@+id/btnSairKids"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="游뛁 SAIR"
        android:textSize="16sp"
        android:backgroundTint="@color/kids_red"
        android:focusable="true"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
