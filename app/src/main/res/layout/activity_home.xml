<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:background="#101010">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- CABEÃ‡ALHO COM BARRA DE BUSCA -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VLTV PLAY"
                android:textColor="#E50914"
                android:textSize="20sp"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:layout_marginEnd="8dp" />

            <!-- BARRA DE BUSCA MAIS CURTA -->
            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="0.7"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_search_rounded"
                android:paddingStart="36dp"
                android:paddingEnd="8dp"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="8dp"
                android:hint="Buscar canais, filmes e sÃ©ries"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1" />

            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_settings"
                app:tint="#FFFFFF"
                android:focusable="true" />
        </LinearLayout>

        <!-- BANNER TMDB -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBanner"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="14dp"
            app:cardBackgroundColor="#202020"
            app:cardElevation="6dp"
            android:focusable="true">

            <ImageView
                android:id="@+id/imgBanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@android:color/transparent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:background="#99000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvBannerTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Carregando..."
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:shadowColor="#000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4" />

                <TextView
                    android:id="@+id/tvBannerOverview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#E0E0E0"
                    android:textSize="11sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- MENU DE BOTÃ•ES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- CARD AO VIVO -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardLiveTv"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="5dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#00000000">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/bg_home_card">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“º"
                        android:textSize="26sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AO VIVO"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.08" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD FILMES -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMovies"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="5dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#00000000">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/bg_home_card">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¬"
                        android:textSize="26sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FILMES"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.08" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD SÃ‰RIES -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSeries"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:cardCornerRadius="14dp"
                app:cardElevation="5dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#00000000">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/bg_home_card">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¿"
                        android:textSize="26sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SÃ‰RIES"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.08" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
