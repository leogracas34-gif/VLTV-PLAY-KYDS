<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101010"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- HEADER: CAPA + INFO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="180dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#333333">

                <ImageView
                    android:id="@+id/imgPosterSeries"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSeriesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Carregando..."
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tvSeriesRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#FFC107"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:text="Nota: 0.0"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvSeriesGenre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Gênero: ..."
                    android:textColor="#AAAAAA"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvSeriesPlot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Sinopse..."
                    android:textColor="#CCCCCC"
                    android:textSize="13sp"
                    android:maxLines="4"
                    android:ellipsize="end" />
            </LinearLayout>
        </LinearLayout>

        <!-- ASSISTIR (downloads ocultos) -->
        <LinearLayout
            android:id="@+id/layoutPlayDownload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- ASSISTIR -->
            <Button
                android:id="@+id/btnPlaySeries"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_home_red"
                android:text="ASSISTIR"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <!-- Área BAIXAR EPISÓDIO (oculta) -->
            <LinearLayout
                android:id="@+id/btnDownloadSeriesArea"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:clickable="false"
                android:focusable="false">

                <ImageView
                    android:id="@+id/imgDownloadSeriesState"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvDownloadSeriesState"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Botão BAIXAR TEMPORADA (oculto) -->
            <Button
                android:id="@+id/btnDownloadSeason"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>

        <!-- SELETOR DE TEMPORADA + FAVORITO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/btnSeasonSelector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#333333"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:text="Temporadas ▼"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/btnFavoriteSeries"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_star_border"
                android:tint="#FFFFFF" />
        </LinearLayout>

        <!-- LISTA DE EPISÓDIOS -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvEpisodes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
