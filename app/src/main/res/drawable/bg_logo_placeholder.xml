<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fundo em gradiente leve -->
    <gradient
        android:startColor="#333A3D42"
        android:endColor="#FF111111"
        android:angle="90" />

    <!-- Cantos arredondados combinando com o card -->
    <corners android:radius="12dp" />

    <!-- Borda discreta para dar destaque -->
    <stroke
        android:width="1dp"
        android:color="#55FFFFFF" />

    <!-- Padding interno opcional -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
