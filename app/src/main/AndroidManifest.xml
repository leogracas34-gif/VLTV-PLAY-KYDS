<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- App NÃO exige tela touch (importante para Android TV / Fire TV) -->
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:logo="@mipmap/ic_launcher_round"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="VLTV PLAY"
        android:supportsRtl="true"
        android:theme="@style/Theme.VLTVPlay"
        android:networkSecurityConfig="@xml/network_security_config"
        android:launchMode="singleTask"
        android:resizeableActivity="true"
        tools:targetApi="31">

        <!-- LOGIN (Launcher + Android TV / Google TV) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- HOME -->
        <activity
            android:name=".HomeActivity"
            android:banner="@mipmap/ic_launcher"
            android:exported="true"
            android:screenOrientation="sensorLandscape" />

        <!-- TV AO VIVO -->
        <activity
            android:name=".LiveTvActivity"
            android:banner="@mipmap/ic_launcher"
            android:screenOrientation="sensorLandscape" />

        <!-- PLAYER (CANAIS / FILMES / SÉRIES) -->
        <activity
            android:name=".PlayerActivity"
            android:banner="@mipmap/ic_launcher"
            android:screenOrientation="sensorLandscape" />

        <!-- FILMES (VOD) -->
        <activity
            android:name=".VodActivity"
            android:banner="@mipmap/ic_launcher"
            android:screenOrientation="sensorLandscape" />

        <!-- DETALHES DO FILME -->
        <activity
            android:name=".DetailsActivity"
            android:banner="@mipmap/ic_launcher"
            android:screenOrientation="sensorLandscape" />

        <!-- LISTA DE SÉRIES -->
        <activity
            android:name=".SeriesActivity"
            android:banner="@mipmap/ic_launcher"
            android:screenOrientation="sensorLandscape" />

        <!-- DETALHES / EPISÓDIOS DA SÉRIE -->
        <activity
            android:name=".SeriesDetailsActivity"
            android:banner="@mipmap/ic_launcher"
            android:screenOrientation="sensorLandscape" />

        <!-- BUSCA GERAL (LUPA) -->
        <activity
            android:name=".SearchActivity"
            android:banner="@mipmap/ic_launcher"
            android:screenOrientation="sensorLandscape" />

        <!-- CONFIGURAÇÕES / CONTROLE PARENTAL -->
        <activity
            android:name=".SettingsActivity"
            android:banner="@mipmap/ic_launcher"
            android:screenOrientation="sensorLandscape" />

        <!-- MEUS DOWNLOADS -->
        <activity
            android:name=".DownloadsActivity"
            android:banner="@mipmap/ic_launcher"
            android:screenOrientation="sensorLandscape" />

    </application>

</manifest>
